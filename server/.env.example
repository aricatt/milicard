# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/milicard_dev?schema=public"

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# 服务器配置
PORT=6801
NODE_ENV="development"

# 文件上传配置
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10MB"

# 日志配置
LOG_LEVEL="debug"

# Casbin配置
CASBIN_MODEL_PATH="./config/casbin_model.conf"
CASBIN_POLICY_PATH="./config/casbin_policy.csv"

# 跨域配置
CORS_ORIGIN="http://localhost:3000"

# 物流查询API配置（阿里云）
LOGISTICS_APPCODE="your-aliyun-logistics-appcode"

# 阿里云OSS配置（点位拜访图片上传）
OSS_REGION="oss-ap-southeast-7"
OSS_ACCESS_KEY_ID="your-oss-access-key-id"
OSS_ACCESS_KEY_SECRET="your-oss-access-key-secret"
OSS_BUCKET="milisystem-bucket"
OSS_ENDPOINT="oss-ap-southeast-7.aliyuncs.com"
# OSS_USE_SIGNED_URL=true  # true=私有Bucket使用签名URL(默认), false=公共读Bucket使用普通URL
